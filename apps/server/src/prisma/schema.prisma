generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shows {
  id String @id @default(uuid()) @db.Uuid
  name String

  episodes Episode[]
}

model Episode {
  id String @id @default(uuid()) @db.Uuid
  count Int?
  season Int?

  shows  Shows @relation(fields: [showId],references: [id])
  showId String @db.Uuid

}


